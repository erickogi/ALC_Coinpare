<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:visibility="gone">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:padding="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/flag_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="2dp"

                android:padding="6dp"
                android:src="@drawable/flag_it" />

            <TextView

                android:id="@+id/txt_currency_name_detail"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/flag_detail"
                android:gravity="center"

                android:padding="6dp"
                android:text="KES"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/txt_currency_name_detail"
                android:src="@drawable/ic_expand_less_black_24dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_refresh_black_24dp" />

                <TextView
                    android:id="@+id/txt_updated_at_detail"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:text="Just Now"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flag_detail"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="6dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price :" />

                    <TextView
                        android:id="@+id/txt_currency_price_detail"
                        style="@style/TextAppearance.AppCompat.Large"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KES  712458" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:background="@color/line"
                    android:padding="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Market :" />

                        <TextView
                            android:id="@+id/txt_market"
                            style="@style/TextAppearance.AppCompat.Large"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CryptoCompare Index" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Opened @ :" />

                        <TextView
                            android:id="@+id/txt_open"
                            style="@style/TextAppearance.AppCompat.Large"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KES  772458" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:background="@color/line"
                    android:padding="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="High @ :" />

                        <TextView
                            android:id="@+id/txt_high"
                            style="@style/TextAppearance.AppCompat.Large"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KES  772458" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Low @ :" />

                        <TextView
                            android:id="@+id/txt_low"
                            style="@style/TextAppearance.AppCompat.Large"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KES  772458" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:background="@color/line"
                    android:padding="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change(24hrs) By :" />

                        <TextView
                            android:id="@+id/txt_change"
                            style="@style/TextAppearance.AppCompat.Large"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KES  458" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change % :" />

                        <TextView
                            android:id="@+id/txt_change_pct"
                            style="@style/TextAppearance.AppCompat.Large"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6.08" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:background="@color/line"
                    android:padding="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Market Cap :" />

                        <TextView
                            android:id="@+id/txt_market_cap"
                            style="@style/TextAppearance.AppCompat.Large"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KES  458.7 B" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Supply :" />

                        <TextView
                            android:id="@+id/txt_supply"
                            style="@style/TextAppearance.AppCompat.Large"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ 19 800 768 B" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details"
                android:orientation="horizontal">
                <!--<Button-->
                <!--android:id="@+id/btn_notify"-->
                <!--android:gravity="center"-->
                <!--android:text="NOTIFY"-->
                <!--android:layout_gravity="center"-->
                <!--android:singleLine="true"-->

                <!--android:drawableLeft="@drawable/ic_notifications_black_24dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content" />-->
                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"

                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Share" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>