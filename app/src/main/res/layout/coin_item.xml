<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView android:elevation="3dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto">
    <com.ramotion.foldingcell.FoldingCell
        android:clipChildren="false"
        android:clipToPadding="false"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/folding_cell"
        folding-cell:animationDuration="300"
        folding-cell:backSideColor="@color/colorAccent"
        folding-cell:additionalFlipsCount="3"
        folding-cell:cameraHeight="30"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/coin_content_view" />

        <!-- TITLE (FOLDED) LAYOUT (MUST BE AT LEAST 2x times SMALLER than content layout above) -->
        <include layout="@layout/coin_title_view" />

    </com.ramotion.foldingcell.FoldingCell>


</android.support.v7.widget.CardView>



